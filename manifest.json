{
  "manifest_version": 3,
  "name": "Extensinho",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "images/icon48.png",
      "48": "images/icon96.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.scss"]
    }
  ]
}
